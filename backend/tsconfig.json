{
  "compilerOptions": {
    "target": "ES2021",                          
    "module": "CommonJS",                       
    "lib": ["ES2021"],                          
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",                 
    "skipLibCheck": true,                       
    "resolveJsonModule": true,                  
    "allowJs": false,                           
    "noImplicitAny": true,                      
    "sourceMap": true                           
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
